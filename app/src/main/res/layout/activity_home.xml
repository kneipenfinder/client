<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".home">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finden"
        android:id="@+id/find"
        android:layout_marginTop="34dp"
        android:onClick="button_findLocation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="59dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suchen"
        android:id="@+id/search"
        android:layout_toEndOf="@+id/find"
        android:layout_below="@+id/find"
        android:layout_toRightOf="@+id/find"
        android:layout_marginTop="83dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bewerten"
        android:id="@+id/rate"
        android:layout_toStartOf="@+id/search"
        android:layout_below="@+id/search"
        android:layout_toLeftOf="@+id/search"
        android:layout_marginTop="62dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HinzufÃ¼gen"
        android:id="@+id/add"
        android:layout_toEndOf="@+id/rate"
        android:layout_below="@+id/rate"
        android:layout_toRightOf="@+id/rate"
        android:layout_marginLeft="45dp" />

</RelativeLayout>
